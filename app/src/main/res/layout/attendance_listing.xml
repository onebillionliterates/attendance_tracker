<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="#ffffff">

    <com.google.android.material.tabs.TabLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="1dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="1dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:id="@+id/sessionsTabs" app:layout_constraintTop_toBottomOf="@+id/durationSelect"
            android:layout_marginTop="10dp">

        <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Present"/>

        <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Absent"/>

    </com.google.android.material.tabs.TabLayout>
    <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/sessionsPager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sessionsTabs"
            android:background="#ffffff" android:layout_marginTop="1dp">
    </androidx.viewpager.widget.ViewPager>
    <!-- Select Start And End Time -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/durationSelect" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent">
        <TextView
                android:hint=" "
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="23sp"
                android:layout_weight="0.1"
                android:textAlignment="center"
                android:gravity="center"/>
        <TextView
                android:hint="Start Date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/startTimeSelectTextView"
                android:textSize="23sp"
                android:layout_weight="0.4"
                android:textAlignment="center"
                android:background="@drawable/button_view"
                android:gravity="center"/>
        <TextView
                android:hint=" "
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="23sp"
                android:layout_weight="0.1"
                android:textAlignment="center"
                android:gravity="center"/>
        <TextView
                android:hint="End Date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/endTimeSelectTextView"
                android:textSize="23sp"
                android:layout_weight="0.4"
                android:textAlignment="center"
                android:background="@drawable/button_view"
                android:gravity="center"/>
        <TextView
                android:hint=" "
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="23sp"
                android:layout_weight="0.1"
                android:textAlignment="center"
                android:gravity="center"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
