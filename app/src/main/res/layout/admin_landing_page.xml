<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="284dp"
            android:layout_height="282dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="125dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">


        <include
                android:id="@+id/sessions"
                layout="@layout/landing_button_card"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/schools" android:layout_marginTop="25dp"
                app:layout_constraintVertical_bias="0.0" app:layout_constraintEnd_toStartOf="@+id/attendance"
                android:layout_marginEnd="25dp" android:layout_marginBottom="25dp"
                android:drawableTop="@drawable/arrow_drawable"
                android:fontFamily="sans-serif-black" android:textSize="16sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>
        <include
                android:id="@+id/attendance"
                layout="@layout/landing_button_card"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="25dp"
                app:layout_constraintTop_toBottomOf="@+id/teachers"
                android:layout_marginTop="25dp" app:layout_constraintStart_toEndOf="@+id/sessions"
                app:layout_constraintHorizontal_bias="0.926" android:layout_marginStart="25dp"
                android:layout_marginBottom="25dp" app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="16sp" android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:fontFamily="sans-serif-black" android:drawableTop="@drawable/arrow_drawable"/>
        <include
                android:id="@+id/schools"
                layout="@layout/landing_button_card"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="25dp"
                app:layout_constraintEnd_toStartOf="@+id/teachers" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="25dp" android:layout_marginEnd="25dp" android:layout_marginBottom="25dp"
                app:layout_constraintBottom_toTopOf="@+id/sessions" android:textColor="@color/colorLightBlack"
                android:textSize="16sp" android:fontFamily="sans-serif-black" android:typeface="normal"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:drawableTop="@drawable/arrow_drawable"/>
        <include
                android:id="@+id/teachers"
                layout="@layout/landing_button_card"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="25dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="25dp"
                app:layout_constraintStart_toEndOf="@+id/schools" android:layout_marginStart="25dp"
                android:layout_marginBottom="25dp" app:layout_constraintBottom_toTopOf="@+id/attendance"
                android:textSize="16sp" android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textStyle="bold" android:fontFamily="sans-serif-black"
                android:drawableTop="@drawable/arrow_drawable"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
